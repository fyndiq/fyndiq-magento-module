<phpunit
        bootstrap="test/bootstrap.php"
        backupGlobals="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        >
    <testsuites>
        <testsuite>
            <directory prefix="test" suffix=".php">./test/src/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./fyndiq</directory>
            <directory>./test/dep</directory>
        </blacklist>
    </filter>
</phpunit>