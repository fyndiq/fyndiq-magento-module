<?xml version="1.0" ?>
<config>
    <modules>
        <Fyndiq_Fyndiq>
            <version>1.0.0</version>
        </Fyndiq_Fyndiq>
    </modules>
    <global>
        <models>
            <Fyndiq_Fyndiq>
                <class>Fyndiq_Fyndiq_Model</class>
            </Fyndiq_Fyndiq>
        </models>
        <blocks>
            <Fyndiq>
                <rewrite>
                    <exportproducts>Fyndiq_Fyndiq_Block_Exportproducts</exportproducts>
                </rewrite>
            </Fyndiq>
        </blocks>
    </global>
    <admin>
        <routers>
            <Fyndiq>
                <use>admin</use>
                <args>
                        <module>Fyndiq_Fyndiq</module>
                        <frontName>fyndiq</frontName>
                </args>
            </Fyndiq>
        </routers>
        <layout>
            <updates>
                <Fyndiq>
                    <file>fyndiqadmin.xml</file>
                </Fyndiq>
            </updates>
        </layout>
    </admin>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <fyndiq>
                        <title>Fyndiq Export/Import</title>
                        <sort_order>0</sort_order>
                        <action>fyndiq/admin/exportproducts</action>
                    </fyndiq>
                </children>
            </system>
        </menu>
    </adminhtml>
    <events>
        <!-- The code of the event we want to observe -->
        <sales_order_save_after>
            <!-- Defining an observer for this event -->
            <observers>
                <Fyndiq_Fyndiq>
                    <!-- The model to be instantiated -->
                    <class>fyndiq_fyndiq/observer</class>
                    <!-- The method of the class to be called -->
                    <method>exportQuantity</method>
                    <!-- The type of class to instantiate -->
                    <type>singleton</type>
                </Fyndiq_Fyndiq>>
            </observers>
        </sales_order_save_after>
    </events>
</config>